    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/pages/errors/view_expired.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>com.ect.web.controller.exception.SessionExpireException</exception-type>
        <location>/pages/errors/session_expired.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>com.ect.web.controller.exception.AccessDenieException</exception-type>
        <location>/pages/errors/access_denie.xhtml</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>pages/login/login.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/errors/500.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/pages/login/login.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/errors/404.xhtml</location>
    </error-page>
</web-app>
